{%if section.settings.section_enable %}

{%- assign owlColumn1 = section.settings.column1 | plus:0 -%}
{%- assign owlColumn2 = section.settings.column2 | plus:0 -%}
{%- assign owlColumn3 = section.settings.column3 | plus:0 -%}
{%- assign owlColumn4 = section.settings.column4 | plus:0 -%}
<div class="velaSlideBanner{% if section.settings.subfixclass !=blank %} {{section.settings.subfixclass}}{% endif %}" style="background-color: {{section.settings.color_bg }};{% if section.settings.img_bg !=blank %} background-image: url({{ section.settings.img_bg | img_url: "master" }});{% endif %}
                                     {% if section.settings.margin_block !=blank %}margin:{{section.settings.margin_block}}; {% endif %}
                                     {% if section.settings.padding_block !=blank %}padding:{{section.settings.padding_block}}; {% endif %}">
   <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="velaContent">

                <div class="slickCarousel" data-slick='{"slidesToShow": {{ owlColumn1 }},
                                                       "slidesToScroll": 1,
                                                       "arrows": {{ section.settings.navigation }},
                                                       "infinite": true,
                                                       "autoplay": {{ section.settings.autoplay }},
                                                       "autoplaySpeed": {{ section.settings.autoplay_speed }},
                                                       "touchMove": true,
                                                       "speed": {{ section.settings.speed }} }'
                                                        data-columntwo="{{ owlColumn2 }}"
                                                        data-columnthree="{{ owlColumn3 }}"
                                                        data-columnfour="{{ owlColumn4 }}"
                                                        data-columnfive="1">                            
                    {% for block in section.blocks %}
                        <div class="item">
                            <div class="bannerItem">
                                {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
                                    {% if block.settings.image != blank %}
                                        <img class="img-responsive" alt="{{ block.settings.image.alt | default: shop.name }}" src="{{ block.settings.image | img_url: "master" }}" />
                                    {% else %}
                                        <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/1170x560" />
                                    {% endif %}
                                {% if block.settings.link != blank %}</a>{% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

        </div>
    </div>
</div>
{% endif %}
