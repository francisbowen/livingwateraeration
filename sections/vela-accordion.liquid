{% if section.settings.section_enable %}
   <div class="velaAccordion{% if section.settings.subfixclass !=blank %} {{section.settings.subfixclass}}{% endif %}" style="background-color: {{section.settings.color_bg }};{% if section.settings.img_bg !=blank %} background-image: url({{ section.settings.img_bg | img_url: "master" }});{% endif %}
                                     {% if section.settings.margin_block !=blank %}margin:{{section.settings.margin_block}}; {% endif %}
                                     {% if section.settings.padding_block !=blank %}padding:{{section.settings.padding_block}}; {% endif %}">
      <div class="container{% if section.settings.full_with %}-full{% endif %}">
         <h3 class="velaTitle velaHomeTitle">
            {% if section.settings.title != blank  %}
                <span class="title">
               {{ section.settings.title }}
            </span>
            {% endif %}
            {% if section.settings.subtitle != blank %}
            <span class="subtitle">{{ section.settings.subtitle }}</span>
            {% endif %}
         </h3>
         <div class="velaContent">
	         <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
         		{% for block in section.blocks %}
					  	<div class="panel panel-default">
						   {% if block.settings.question != blank %}
						   <div class="panel-heading" role="tab">
						      <h4 class="panel-title">
						        <a {% if forloop.index != 1 %}class="collapsed"{% endif %} role="button" data-toggle="collapse" data-parent="#accordion" href="#velaFaq{{ forloop.index }}" aria-expanded="true" aria-controls="velaFaq{{ forloop.index }}">
						           {{ forloop.index }}. {{ block.settings.question }}
						        </a>
						      </h4>
						   </div>
						   {% endif %}
						   {% if block.settings.answer !=blank %}
							   <div id="velaFaq{{ forloop.index }}" class="panel-collapse collapse{% if forloop.index == 1 %} in{% endif %}" role="tabpanel">
							      <div class="panel-body">
							      	{{ block.settings.answer }}
							      </div>
							   </div>
							{% endif %}
					  	</div>
					{% endfor %}
				</div>
         </div>
      </div>
   </div>
{% endif %}
   {% schema %}
   {
     	"name": "Vela Accordion",
     	"class": "velaFramework",
	 	"max_blocks": 18,
     	"settings":[
		   {
            "type": "header",
            "content": "Design Section"
         },
		   {
            "type": "checkbox",
            "id": "section_enable",
            "label": "Enabel Section?",
            "default": true
         },
         {
            "type": "checkbox",
            "id": "full_with",
            "label": "Enabel Full Width?"
         },
         {
            "type": "text",
            "id": "subfixclass",
            "label": "Add class"
         },
         {
            "type": "image_picker",
            "id": "img_bg",
            "label": "background image for block"
         },
         {
            "type": "color",
            "id": "color_bg",
            "label": "Background Color",
            "default": "rgba(0,0,0,0)"
         },
		   {
            "type": "text",
            "id": "margin_block",
            "label": "Margin",
            "placeholder": "0px 0px"
         },
		   {
            "type": "text",
            "id": "padding_block",
            "label": "Padding",
            "placeholder": "0px 0px"
         },
         {
            "type": "header",
            "content": "General Settings"
         },
         {
	        	"type": "text",
	        	"id": "title",
	        	"placeholder": "Title",
	        	"label": "Title"
	      },
	      {
	        	"type": "text",
	        	"id": "subtitle",
	        	"placeholder": "subTitle",
	        	"label": "Sub Title"
	      }
     ],
		
		"blocks": [
			{
            "type": "item",
            "name": "Item",
            "settings": [
               {
                  "type": "text",
                  "id": "question",
                  "label": "Question"
               },
               {
                  "type": "textarea",
                  "id": "answer",
                  "label": "Answer"
               }
            ]
         }
		]
	}
	{% endschema %}