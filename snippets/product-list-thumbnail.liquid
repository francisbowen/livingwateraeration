{% assign proImageSize = 'small' %}
{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
    {% assign on_sale = true %}
{% endif %}
{% assign sold_out = true %}
{% if product.available %}
    {% assign sold_out = false %}
{% endif %}
<div class="velaProBlock {{ product-list-item }}">
   <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
         <div class="proHImage">
            <a class="proFeaturedImage" href="{{ product.url }}">                            
               <img class="img-responsive" alt="{{ product.featured_image.alt | escape }}" src="{{ product.featured_image | product_img_url:proImageSize }}" />           
            </a>
            {% if on_sale %}
               <span class="labelSale">{{ 'products.product.label_sale' | t }}</span>
            {% endif %}
         </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
         <div class="proContent">
            <h5 class="proName">
               <a href="{{ product.url }}" title="{{ product.title }}">{{ product.title }}</a>
            </h5>
            <div class="proPrice">
               <div class="priceProduct priceSale"><span>{{ 'products.product.from' | t }}:</span>{{ product.price | money }}</div>
            </div>
            <div class="proThumbnail clearfix">
               <ul class="list-inline">
               {% for image in product.images %}
                  {% assign intItem = forloop.index %}
                  {% if forloop.first != true %}
                     <li>
                        <img class="img-responsive" alt="{{ image.alt }}" src="{{ image.src | product_img_url:proImageSize }}">
                        {% if intItem == 5 %}
                           {% break %}
                        {% endif %}
                     </li>
                  {% endif %}
              {% endfor %}
            </div>
            <a class="btn-shopnow" href="{{ product.url }}" title="{{ 'products.product.shopnow' | t }}">{{ 'products.product.shopnow' | t }}</a>
         </div>
      </div>
   </div>
</div>