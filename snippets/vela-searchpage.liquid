
<form method="get" id="velaSearchbox" class="formSearchCustom" action="/search">
	<div class="input-group">
		<input type="hidden" name="type" value="product" />
		<input type="search" name="query" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" autocomplete="off" class="velaSearch form-control ysw-search-instant-search-input" />
		<span class="input-group-btn">
			<button type="submit" class=" btn btnVelaSearch btnVelaOne">
			  	<span class="fa fa-search"></span>
			  	<span class="btnSearchText">{{ 'general.search.submit' | t }}</span>
			</button>
		</span>
	</div>
</form>