{% schema %}
  {
    "name": "Full Banner",
    "settings": [
		{
			"id": "imageBanner",
			"type": "image_picker",
			"label": "Image"
		},
		{
          "id": "title",
          "type": "text",
          "label": "Title",
          "placeholder": "The title"
        },
		{
          "id": "bigText",
