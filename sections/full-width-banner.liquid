          "label": "Button text",
          "default": "Click here"
        },
		{
          "id": "link",
          "type": "url",
          "label": "Button link"
        },
		{
			"id":"buttonColor",
			"type":"color",
			"label": "Button Color",
			"default": "#0574a9"
		}
	],
    "presets": [
        {
          "name": "Full Banner",
          "category": "Banner"
        }
      ]
  }
